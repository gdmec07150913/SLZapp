<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF540"
    tools:context="com.example.pak_lup.slzapp.activity.pbActivity">

    <include layout="@layout/container_toolbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCA41E"
        android:paddingBottom="30dp">

        <TextView
            android:text="我的皮币"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_pb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/pb"
            android:id="@+id/pbimg_pb"
            android:layout_below="@+id/name_pb"
            android:layout_toStartOf="@+id/name_pb"
            android:layout_marginEnd="10dp" />

        <TextView
            android:text="100"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sl_pb"
            android:layout_marginBottom="15dp"
            android:layout_alignBottom="@+id/pbimg_pb"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="签到"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qd_pb"
            android:layout_below="@+id/sl_pb"
            android:layout_alignEnd="@+id/name_pb"
            android:background="@drawable/shape" />
    </RelativeLayout>

    <TextView
        android:text="*说明：皮币相当于您在拾乐志的钱包，您的每一次完成失物悬赏都可以获得对应的皮币，您可以用来发布失物悬赏。"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:gravity="center_vertical|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="*用处：皮币的最普遍的用处就是用它来向拾乐志用户提问，用皮币作为你的悬赏，你的失物招领会得到更多热心人士的关注和帮助。"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:gravity="center_vertical|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="*来源：皮币的来源在于完成失物悬赏和每日签到。"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:gravity="center_vertical|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
