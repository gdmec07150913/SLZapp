<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.pak_lup.slzapp.activity.MainActivity">

    <include layout="@layout/container_toolbar"></include>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.pak_lup.slzapp.view.XCRoundImageView
            android:id="@+id/roundImagetx"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/touxiang2"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp">
        </com.example.pak_lup.slzapp.view.XCRoundImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pak_Lup"
            android:textStyle="bold"
            android:textSize="22dp"
            android:id="@+id/name_mine"
            android:layout_toEndOf="@+id/roundImagetx"
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/pb"
            android:id="@+id/pbimg_mine"
            android:layout_toEndOf="@+id/roundImagetx"
            android:layout_marginStart="20dp"
            android:layout_marginTop="55dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100枚"
            android:textSize="20dp"
            android:id="@+id/pb_name"
            android:layout_toEndOf="@+id/pbimg_mine"
            android:layout_marginStart="5dp"
            android:layout_marginTop="65dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape5"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="-120dp"
            android:paddingLeft="120dp"/>

        <Button
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启示发布"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:drawableLeft="@drawable/fabu"
            android:drawablePadding="-120dp"
            android:paddingLeft="120dp"/>

        <Button
            android:id="@+id/bt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启示收藏"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:background="@drawable/shape3"
            android:drawableLeft="@drawable/love"
            android:drawablePadding="-120dp"
            android:paddingLeft="120dp"/>
        <Button
            android:id="@+id/bt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="密码修改"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:background="@drawable/shape4"
            android:drawableLeft="@drawable/pwd"
            android:drawablePadding="-120dp"
            android:paddingLeft="120dp"/>
        <Button
            android:id="@+id/bt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quit_login"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:background="@drawable/shape5"
            android:drawableLeft="@drawable/logout"
            android:drawablePadding="-120dp"
            android:paddingLeft="120dp"/>
    </LinearLayout>
</LinearLayout>